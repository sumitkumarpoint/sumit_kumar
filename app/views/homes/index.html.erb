    <style>
        /* Custom styles for Inter font and general body */
        body {
            font-family: 'Inter', sans-serif;
            @apply bg-gray-50 text-gray-800;
        }

        /* Smooth scrolling for anchor links */
        html {
            scroll-behavior: smooth;
        }

        /* Modal specific styles */
        .modal {
            @apply fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50 p-4 animate-fade-in;
        }
        .modal-content {
            @apply bg-white p-8 rounded-2xl shadow-2xl max-w-2xl w-full relative transform scale-95 animate-scale-in;
        }
        .modal-close-button {
            @apply absolute top-4 right-4 text-gray-500 hover:text-gray-900 text-3xl font-bold transition-colors duration-200;
        }

        /* Custom styles for active skill filter button */
        .skill-button.active {
            @apply bg-gradient-to-r from-blue-600 to-purple-700 text-white shadow-lg transform scale-105;
        }

        /* Form validation feedback */
        .input-error {
            @apply border-red-500 ring-red-200 ring-2;
        }
        .error-message {
            @apply text-red-600 text-sm mt-1 font-medium;
        }

        /* Keyframe animations */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes scaleIn {
            from { transform: scale(0.9); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }
        .animate-fade-in {
            animation: fadeIn 0.3s ease-out forwards;
        }
        .animate-scale-in {
            animation: scaleIn 0.3s ease-out forwards;
        }

        /* Custom scrollbar for aesthetics */
        ::-webkit-scrollbar {
            width: 10px;
        }
        ::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 10px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
